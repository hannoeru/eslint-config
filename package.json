{
  "name": "@hannoeru/eslint-config-monorepo",
  "version": "0.9.5",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "license": "MIT",
  "author": "hannoeru <me@hanlee.co>",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "pnpm bump && pnpm publish",
    "bump": "pnpm dlx bumpp package.json packages/*/package.json -x 'pnpm changelog' --all",
    "publish": "pnpm -r --filter './packages/*' publish --access public --no-git-checks",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@hannoeru/eslint-config": "workspace:*",
    "@hannoeru/eslint-plugin": "workspace:*",
    "@types/react": "^18.2.6",
    "bumpp": "^9.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.40.0",
    "jiti": "^1.18.2",
    "react": "^18.2.0",
    "typescript": "^5.0.4",
    "zx": "^7.2.2"
  }
}
